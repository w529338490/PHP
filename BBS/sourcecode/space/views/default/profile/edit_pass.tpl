<{include file="public/header.tpl"}><script type="text/javascript">	var bool1=bool2=bool3=false;	function checkpass(pass){		Ajax().post("<{$url}>/checkpass",{pass:pass},function(data){			if(data=="true"){				document.getElementById("oldpass").innerHTML="<font color='green'>密码正确!</font>";				bool1=true;			}else{				document.getElementById("oldpass").innerHTML="<font color='red'>原始密码错误!</font>";				bool1=false;			}		});	}	function passformat(pass){		if(pass==''){			document.getElementById("newpass").innerHTML="<font color='red'>密码不能为空!</font>";			bool2=false;		}else{			if(pass.length<6){				document.getElementById("newpass").innerHTML="<font color='red'>密码不能小于六位!</font>";				bool2=false;			}else{				document.getElementById("newpass").innerHTML="<font color='green'>密码格式正确!</font>";				bool2=true;			}		}	}	function vepass(pass){		var newpass=document.getElementById("new_pass").value;		if(pass!=newpass){			document.getElementById("vpass").innerHTML="<font color='red'>两次密码输入不一致!</font>";			bool3=false;		}else{			document.getElementById("vpass").innerHTML="<font color='green'>两次密码输入一致!</font>";			bool3=true;		}	}	function check(){		if(bool1 && bool2 && bool3){			return true;		}else{			return false;		}	}</script>		<div class="nav"></div>		<div id="content">			<div class="speak_left">				<div class="column">					<div class="column_title">修改密码<span><img src="<{$res}>/images/wall.gif" /><a href="<{$url}>/edit_pass">修改头像</a></span></div>					<div class="column_content">						<form action="<{$url}>/doedit_pass" name="editpassform" onsubmit="return check();" method="post">							<table width="100%">								<tr style="border-bottom:1px solid #cccccc">									<td style="color:#444" height="50px" width="150px" align="right">用户名:</td>									<td align="left" width="300px">										&nbsp;&nbsp;<input type="text" name="name" value="admin" readonly style="border:0;color:#666" />									</td>								</tr>								<tr>									<td style="color:#444" height="50px" width="150px" align="right">原始密码:</td>									<td align="left" width="300px">										&nbsp;&nbsp;<input type="password" name="o_password" style="border:1px solid #bbbbbb" onblur="checkpass(this.value)" />&nbsp;&nbsp;<span id="oldpass"></span>									</td>								</tr>								<tr>									<td style="color:#444" height="50px" width="150px" align="right">新密码:</td>									<td align="left" width="300px">										&nbsp;&nbsp;<input type="password" id="new_pass" name="pass" style="border:1px solid #bbbbbb" onblur="passformat(this.value)" />&nbsp;&nbsp;<span id="newpass"></span>									</td>								</tr>								<tr>									<td style="color:#444" height="50px" width="150px" align="right">确认密码:</td>									<td align="left" width="300px">										&nbsp;&nbsp;<input type="password" name="vpass" style="border:1px solid #bbbbbb" onblur="vepass(this.value)" />&nbsp;&nbsp;<span id="vpass"></span>									</td>								</tr>								<tr>									<td colspan="2" align="center" height="50px">										<button class="pn">确认修改</button>										<button class="pn" onclick="window.location.href='<{$url}>/edit_avar/uid/<{nocache}><{$smarty.session.user_info.id}><{/nocache}>'">下一步</button>										<button class="pn" onclick="window.history.back()">返回</button>									</td>								</tr>							</table>						</form>					</div>				</div>			</div>			<{include file="public/right.tpl"}>		</div><{include file="public/footer.tpl"}>