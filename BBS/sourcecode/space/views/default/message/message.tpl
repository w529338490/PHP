<{nocache}><{if $message_data}>	<{section loop=$message_data name="mls"}>	<div class="message_content">		<div class="avar_left"><img src="<{$public}>/uploads/user/s_<{$message_data[mls].mess_avar}>" width="48px" height="48px"></div>		<div class="content_right" style="width:450px;">			<div class="title"><a href=""><{$message_data[mls].mess_name}></a><span><{$message_data[mls].ptime|chinadate:"Y-m-d H:i:s"}></span>			</div>			<div class="content"><{$message_data[mls].content|html_decode}></div>		</div>		<{if $smarty.session.home_login==1 && $smarty.session.user_info.id==$smarty.get.uid }>			<span class="opr" style="cursor:pointer;color:#006699" onclick="delg(<{$message_data[mls].id}>);">删除&nbsp;</span>		<{/if}>		<span class="opr" style="cursor:pointer;color:#999999">IP:<{$message_data[mls].ip|ip}></span>	</div><div class="line_nav"></div>	<{/section}>	<{$fpage}><{else}>	<font color="#cccccc" size="2">暂无留言!</font><{/if}><{/nocache}>