<{nocache}>	<{if $mdata}>		<{section loop=$mdata name="mls" max=$s_mess_index }>			<div class="message_content">				<div class="avar_left"><img src="<{$public}>/uploads/user/s_<{$mdata[mls].mess_avar}>" width="48px" height="48px"></div>				<div class="content_right" style="width:353px;">					<div class="title"><a href="<{$app}>/index/index/uid/<{$mdata[mls].mess_id}>"><{$mdata[mls].mess_name}></a><span><{$mdata[mls].ptime|chinadate:"m-d H:i:s"}></span></div>					<div class="content"><{$mdata[mls].content|html_decode}></div>				</div>			</div>		<div class="line_nav"></div>		<{/section}>		<p align="right"><a href="<{$app}>/message/index/uid/<{$smarty.get.uid}>">查看全部</a></p>	<{else}>		<font color="#cccccc" size="2">暂无留言!</font>	<{/if}><{/nocache}>