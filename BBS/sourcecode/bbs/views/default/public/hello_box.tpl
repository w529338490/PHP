<style type="text/css">	/*盒子公共样式*/	.hello_window_back{		display:none;		position:absolute;		top:0px;		left:0px;		width:100%;		height:20000px;		z-index:1;	}	.hello_window_box_back{		display:none;		position:absolute;		z-index:2;		background:#DDDDDD;		top:35%;		left:35%;		width:400px;	}	.hello_window_title{		margin:5px 5px 2px 5px;		background: url("<{$res}>/images/title.png") repeat-x scroll 0 0 #EAF1F2;		border: 1px solid #DDDDDD;		font-weight: bold;		height: 33px;		line-height: 33px;		overflow: hidden;		padding: 0 8px;		position: relative;			}	.hello_window_content{		height:200px;		background:white;		margin:0px 5px 5px 5px;		padding:5px;	}	.hello_window_box_back .close{		position:absolute;		top:10px;		right:10px;	}	.hello_window_box_back .close a{		display:block;		width:20px;		height:20px;		background:#F8F8F8 url("<{$res}>/images/cls.gif") repeat-x 0 0;			}	.hello_window_box_back .close a:hover{		display:block;		width:20px;		height:20px;		background:#F8F8F8 url("<{$res}>/images/cls.gif") repeat-x 0 -20px;		}	/*自定义内容样式*/	.hello_window_content table tr td,table tr th{		padding:5px;	}	.hello_window_content table tr th{		text-align:right;	}	.hello_content table tr td{		text-align:left;	}	.hello_window_content > input{		height:22px;		width:180px;	}	.hello_window_content #hello_btn{		background: url("<{$res}>/images/pn.png") repeat-x scroll 0 -48px transparent;		border: 0 none;		color: white !important;		cursor: pointer;		font-weight: bold;		height: 25px;		margin-right: 3px;		overflow: hidden;		padding: 0;		vertical-align: middle;		width: 80px;		margin-left:250px;	}	.hello_window_content ul{		list-style:none;	}	.hello_window_content ul li {		float:left;		width:125px;		line-height:25px;	}	.hello_window_content ul li input{		margin-right:2px;	}</style><script>	$(function(){		$(".close a").click(function(){			$(".hello_window_back").hide();			$(".hello_window_box_back").hide();